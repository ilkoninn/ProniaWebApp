@model Dictionary<string, string>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Details Page</h1>
            <hr>
            <!-- Displaying Details -->
            <dl class="row">
                @foreach (var item in Model)
                {
                    <dt class="col-sm-3">@item.Key:</dt>
                    <dd class="col-sm-9">@item.Value</dd>   
                }
                
                <dt class="col-sm-3">Logo Image:</dt>
                <dd class="col-sm-9">
                    <div style="width:100px">
                        <img width="100%" src="~/Upload/ProductImages/@Model.FirstOrDefault(x => x.Key == "Logo").Value">
                    </div>
                </dd>

                <!-- Other fields and their values similarly -->
            </dl>
            <!-- Add more details as needed -->
        </div>
    </div>
</div>