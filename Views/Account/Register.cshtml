@model RegisterVM

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="breadcrumb-item">
                <h2 class="breadcrumb-heading">Login & Register Page</h2>
                <ul>
                    <li>
                        <a asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li>Register</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100 mb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label aps-for="Name">First Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="First Name">
                                    <div style="color: red; margin-top: 10px; margin-left: 10px;">
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label aps-for="Surname">Last Name</label>
                                    <input asp-for="Surname" placeholder="Last Name" class="form-control">
                                    <div style="color: red; margin-top: 10px; margin-left: 10px;">
                                        <span asp-validation-for="Surname"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label aps-for="Username">Username</label>
                                    <input asp-for="Username" placeholder="Username" class="form-control">
                                    <div style="color: red; margin-top: 10px; margin-left: 10px;">
                                        <span asp-validation-for="Username"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label aps-for="Email">Email</label>
                                    <input asp-for="Email" placeholder="Email" class="form-control">
                                    <div style="color: red; margin-top: 10px; margin-left: 10px;">
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label aps-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password" class="form-control">
                                    <div style="color: red; margin-top: 10px; margin-left: 10px;">
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label aps-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control">
                                    <div style="color: red; margin-top: 10px; margin-left: 10px;">
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->